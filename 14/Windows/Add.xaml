<Window x:Class="_14.Windows.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_14.Windows"
        mc:Ignorable="d"
        Title="Добавить паспорт" Height="565" Width="310" MinHeight="565" MinWidth="310">
    <Grid>
        <Label Content="#Имя" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="290"/>
        <TextBox x:Name="Name" HorizontalAlignment="Center" Margin="0,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="290" Height="23"/>
        <Label Content="#Фамилия" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" Width="290"/>
        <TextBox x:Name="Firstname" HorizontalAlignment="Center" Margin="0,90,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="290" Height="23"/>
        <Label Content="#Отчество" HorizontalAlignment="Center" Margin="0,121,0,0" VerticalAlignment="Top" Width="290"/>
        <TextBox x:Name="Lastname" HorizontalAlignment="Center" Margin="0,147,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="290" Height="23"/>
        <Label Content="#Паспорт выдан" HorizontalAlignment="Center" Margin="0,175,0,0" VerticalAlignment="Top" Width="290"/>
        <TextBox x:Name="Issued" HorizontalAlignment="Center" Margin="0,201,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="290" Height="23"/>
        <Label Content="#Дата выдачи" HorizontalAlignment="Center" Margin="0,226,0,0" VerticalAlignment="Top" Width="290"/>
        <TextBox x:Name="DateOfIssued" HorizontalAlignment="Center" Margin="0,252,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="290" Height="23"/>
        <Label Content="#Код подразделения" HorizontalAlignment="Center" Margin="0,279,0,0" VerticalAlignment="Top" Width="290"/>
        <TextBox x:Name="DepatmentCode" HorizontalAlignment="Center" Margin="0,305,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="290" Height="23"/>
        <Label Content="#Серия и номер" HorizontalAlignment="Center" Margin="0,331,0,0" VerticalAlignment="Top" Width="290"/>
        <TextBox x:Name="SerialAndNumber" HorizontalAlignment="Center" Margin="0,357,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="290" Height="23"/>
        <Label Content="#Дата рождения" HorizontalAlignment="Center" Margin="0,385,0,0" VerticalAlignment="Top" Width="290"/>
        <TextBox x:Name="DateOfBirth" HorizontalAlignment="Center" Margin="0,411,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="290" Height="23"/>
        <Label Content="#Место рождения" HorizontalAlignment="Center" Margin="0,438,0,0" VerticalAlignment="Top" Width="290"/>
        <TextBox x:Name="PlaceOfBirth" HorizontalAlignment="Center" Margin="0,464,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="290" Height="23"/>
        <Button x:Name="BthAdd" Click="AddPassport" Content="Добавить" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Height="25"/>
    </Grid>
</Window>
